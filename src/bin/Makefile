build:
	cp query.py ../../bin/tkitman-query
	chmod +x ../../bin/tkitman-query
	cp toolkit.py ../../bin/tkitman-toolkit
	chmod +x ../../bin/tkitman-toolkit
	cp update.py ../../bin/tkitman-update
	chmod +x ../../bin/tkitman-update
	cp install.sh ../../install.sh
	chmod +x ../../install.sh

install_meta:
	cp query.py $$HOME/.toolkits/.tkit-bin/tkitman-query
	cp toolkit.py $$HOME/.toolkits/.tkit-bin/tkitman-toolkit
	cp update.py $$HOME/.toolkits/.tkit-bin/tkitman-update
	cp install.sh $$HOME/.toolkits/.tkit-bin/tkitman-install
	chmod +x $$HOME/.toolkits/.tkit-bin/tkitman-{query,toolkit,update,install}
